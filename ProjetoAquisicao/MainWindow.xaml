<Window x:Class="ProjetoAquisicao.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjetoAquisicao"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        mc:Ignorable="d"
        Title="Aquisicao de Dados" Height="450" Width="800">
    <Grid>
        <!-- Controles para selecionar os canais-->
        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top">
            <TextBlock Text="Selecione os canais:" Margin="10"/>
            <CheckBox Content="Canal 1" Name="Canal1CheckBox" Margin="10"/>
            <CheckBox Content="Canal 2" Name="Canal2CheckBox" Margin="10"/>
            <CheckBox Content="Canal 3" Name="Canal3CheckBox" Margin="10"/>
            <CheckBox Content="Canal 4" Name="Canal4CheckBox" Margin="10"/>
            <CheckBox Content="Canal 5" Name="Canal5CheckBox" Margin="10"/>
            <CheckBox Content="Canal 6" Name="Canal6CheckBox" Margin="10"/>
            <Button Content="Atualizar Gráfico" Click="Atualizarbutton_Click" Margin="10"/>
        </StackPanel>
        <!--Grafico onde os dados serao exibidos-->
        <lvc:CartesianChart Name="chart" Width="600" Height="300"
                              HorizontalAlignment="Left" VerticalAlignment="Top" Margin="250,50,10,10"
                              Series="{Binding Series}"
                              XAxes="{Binding XAxes}"
                              LegendPosition="Right"/>
    </Grid>
</Window>
